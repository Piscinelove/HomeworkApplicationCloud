<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_teacher_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.audreycelia.homeworkapp.TeacherFragment">

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <SearchView
                android:id="@+id/search_bar_teacher"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorLight"
                android:orientation="horizontal"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/ib_plus_teacher"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/search_bar_teacher"
                android:layout_toRightOf="@+id/search_bar_teacher"
                android:clickable="true"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/ic_plus"
                android:layout_alignBottom="@+id/search_bar_teacher"
                android:layout_alignParentTop="true" />

            <ListView
                android:id="@+id/listTeachers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_bar_teacher" />

        </RelativeLayout>
</FrameLayout>
