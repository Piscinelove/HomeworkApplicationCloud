<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.audreycelia.homeworkapp.EditExamFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_edit_exam_name"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/et_edit_exam_name"
            android:layout_toStartOf="@+id/et_edit_exam_name" />


        <EditText
            android:id="@+id/et_edit_exam_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/text_color"
            android:layout_alignLeft="@+id/et_edit_exam_date"
            android:layout_alignStart="@+id/et_edit_exam_date" />

        <TextView
            android:id="@+id/tv_edit_exam_date"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_edit_exam_name"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/et_edit_exam_name"
            android:layout_toStartOf="@+id/et_edit_exam_name" />

        <EditText
            android:id="@+id/et_edit_exam_date"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_edit_exam_name"
            android:ems="10"
            android:inputType="date"
            android:textColor="@color/text_color"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_toRightOf="@+id/tv_edit_exam_from"
            android:layout_toEndOf="@+id/tv_edit_exam_from" />



        <TextView
        android:id="@+id/tv_edit_exam_from"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_edit_exam_date"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="@string/from"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

        <EditText
            android:id="@+id/et_edit_exam_from"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="time"
            android:layout_below="@+id/tv_edit_exam_date"
            android:layout_toRightOf="@+id/tv_edit_exam_from"
            android:layout_toEndOf="@+id/tv_edit_exam_from"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/tv_edit_exam_until"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/et_edit_exam_date"
            android:layout_toEndOf="@+id/et_edit_exam_from"
            android:layout_toRightOf="@+id/et_edit_exam_from"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/until"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_edit_exam_until"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_edit_exam_date"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="time"
            android:textColor="@color/text_color"/>


        <TextView
            android:id="@+id/tv_edit_exam_course"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_edit_exam_from"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/course"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/et_edit_exam_from"
            android:layout_toStartOf="@+id/et_edit_exam_from" />

        <Spinner
            android:id="@+id/sp_edit_exam_course"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/et_edit_exam_from"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/et_edit_exam_from"
            android:layout_below="@+id/et_edit_exam_from"
            />

        <TextView
            android:id="@+id/tv_edit_exam_room"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_edit_exam_course"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/room"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/sp_edit_exam_course"
            android:layout_toStartOf="@+id/sp_edit_exam_course" />

        <EditText
            android:id="@+id/et_edit_exam_room"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/sp_edit_exam_course"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/sp_edit_exam_course"
            android:layout_below="@+id/sp_edit_exam_course"
            android:inputType="number"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_edit_exam_grade"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_edit_exam_room"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/grade"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/et_edit_exam_room"
            android:layout_toStartOf="@+id/et_edit_exam_room" />

        <EditText
            android:id="@+id/et_edit_exam_grade"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_edit_exam_room"
            android:layout_toEndOf="@+id/tv_edit_exam_room"
            android:layout_toRightOf="@+id/tv_edit_exam_room"
            android:inputType="numberDecimal"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_edit_exam_description"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_below="@+id/tv_edit_exam_grade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_edit_exam_description"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:ems="30"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:layout_below="@+id/tv_edit_exam_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"/>

        <ImageButton
            android:id="@+id/ib_delete_edit_exam"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorRed"
            android:clickable="true"
            app:srcCompat="@drawable/ic_delete"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</FrameLayout>
