<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.audreycelia.homeworkapp.LoadingActivity"
    android:background="@color/colorPrimary">


        <ImageView
            android:id="@+id/iv_loading_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo"
            android:layout_above="@+id/tv_loading_title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_loading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="34dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>


        <ProgressBar
            android:id="@+id/pb_loading_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#FFFFFF"
            android:layout_below="@+id/tv_loading_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_loading_progress">
                <TextView
                    android:id="@+id/tv_loading_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="19dp"
                    android:textColor="#FFFFFF"
                    android:text="TextView" />

                <ImageView
                    android:id="@+id/iv_loading_cloud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_loading_state"
                    android:layout_toLeftOf="@+id/tv_loading_state"
                    android:layout_toStartOf="@+id/tv_loading_state"
                    app:srcCompat="@drawable/ic_cloud_download"
                    android:layout_marginRight="15dp"/>

        </RelativeLayout>



</RelativeLayout>
